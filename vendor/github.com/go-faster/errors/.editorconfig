# http://editorconfig.org/

root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[{*.go, go.mod}]
indent_style = tab
indent_size = 4

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
